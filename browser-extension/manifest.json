{
  "manifest_version": 3,
  "name": "VSIX Downloader Pro",
  "version": "2.0.1",
  "description": "Professional extension manager for downloading VS Code extensions as VSIX files. Enterprise-grade tool for offline installations and version control.",
  "author": "Mohammad Faiz",
  "homepage_url": "https://github.com/mohammadFaiz/vsix-downloader",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "VSIX Downloader Pro"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://marketplace.visualstudio.com/items*",
        "https://marketplace.visualstudio.com/items?*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://marketplace.visualstudio.com/*",
    "https://*.gallery.vsassets.io/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}